.wrapper
  .signup-header
    -# = link_to "/" do
    -#   = image_tag "material/logo/logo.png", width: 140, height: 40
  .signup-container
    .signup-main
      .title
        会員情報入力
      = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
        = render "devise/shared/error_messages", resource: @user
        .main
          .input
            .input__nickname
              .input__nickname__text.SideType
                .bold
                  ニックネーム
                .red
                  必須
              =f.text_field :nickname, autofocus: true, placeholder: "　例）ぽち", class: "input__nickname__form", id: "nickname"
            .input__email
              .input__email__text.SideType
                .bold
                  メールアドレス
                .red
                  必須
              = f.text_field :email, placeholder: "　PC・携帯どちらでも可", class: "input__email__form", id: "email"
            .input__password
              .input__password__text.SideType
                .bold
                  パスワード
                .red
                  必須
              = f.password_field :password, autocomplete: "off", placeholder: "　7文字以上の半角英数字", class: "input__password__form", id: "password"
            .input__password
              .input__password__text.SideType
                .bold
                  パスワード(確認用)
                .red
                  必須
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "　もう一度パスワードを入力してください", class: "input__password__form", id: "password2"
              .input__submit__btn
                = f.submit "次へ進む", class: "btn", id: "Userinput__btn" 
  .signup-footer
    %nav.signup-footer__nav
      %ul.signup-footer__nav__lists
        %li.signup-footer__nav__lists__list
          = link_to '#' do
            プライバシーポリシー
        %li.signup-footer__nav__lists__list
          = link_to '#' do
            Pochi利用規約
        %li.signup-footer__nav__lists__list
          = link_to '#' do
            特定商取引に関する表記
    -# = link_to "/", class: 'signup-footer__logo' do
    -#   = image_tag "material/logo/logo-white.png", height: '30', width: '120', class: "signup-footer__logo__tag"
    .signup-footer__bottom
      © Pochi